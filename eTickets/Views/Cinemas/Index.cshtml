@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
      <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model ?? Enumerable.Empty<Cinema>())
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px;"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Description)
                        </td>
                       <td class="align-middle">
                                <a class="btn btn-outline-info" asp-controller="Cinemas" asp-action="Details" asp-route-id="@cinema.Id">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@cinema.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@cinema.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
   <div class="row">
        <div class="col-md-10 offset-md-1">
            <a asp-action="Create" class="btn btn-success float-right" title="Add New Actor">
                <i class="fas fa-plus-circle"></i> Add New
            </a>
        </div>
    </div>
</div>
