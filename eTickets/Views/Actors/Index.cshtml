@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="container-fluid">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ProfilePicture</th>
                        <th>FullName</th>
                        <th>Biography</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model ?? Enumerable.Empty<Actor>())
{
    <tr>
        <td class="align-middle">
            <img class="rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width: 150px;" />
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td class="align-middle">
            <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id">
                <i class="bi bi-eye"></i> Details
            </a>
            <a class="btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
            <!-- Edit and Delete buttons -->
        </td>
    </tr>
}

                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <a href="@Url.Action("Create", "Actors")" class="btn btn-success float-right" title="Add New Actor">
                <i class="fas fa-plus-circle"></i> Add New Actor
            </a>
        </div>
    </div>
</div>
