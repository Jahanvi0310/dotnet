@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead class="text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model ?? Enumerable.Empty<Cinema>())
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px;"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" href="@Url.Action("Edit", "Cinemas", new { id = cinema.Id })"><i class="bi bi-pencil"></i> Edit</a> |
                            <a class="btn btn-outline-info" href="@Url.Action("Details", "Cinemas", new { id = cinema.Id })"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Cinemas", new { id = cinema.Id })"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
