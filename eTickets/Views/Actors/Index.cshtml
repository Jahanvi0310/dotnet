@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="container-fluid">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ProfilePicture</th>
                        <th>FullName</th>
                        <th>Biography</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model ?? Enumerable.Empty<Actor>())
                    {
                        <tr>
                            <td>
                                <img src="@actor.ProfilePictureUrl" class="rounded-circle" alt="@actor.FullName" width="100">
                            </td>
                            <td>@actor.FullName</td>
                            <td>@actor.Bio</td>
                            <td>
                                <a href="@Url.Action("Edit", "Actors", new { id = actor.Id })" class="btn btn-sm btn-primary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                <a href="@Url.Action("Details", "Actors", new { id = actor.Id })" class="btn btn-sm btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                    Delete
                                </a>
                                <a href="@Url.Action("Delete", "Actors", new { id = actor.Id })" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <a href="@Url.Action("Create", "Actors")" class="btn btn-success float-right" title="Add New Actor">
                <i class="fas fa-plus-circle"></i> Add New Actor
            </a>
        </div>
    </div>
</div>
