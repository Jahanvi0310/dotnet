@model eTickets.Models.Cinema

@{
    ViewData["Title"] = "Add a new Cinema";
}

<div class="row-text">
    <div class="col-md-8 offset-2">
        <h1>Add a new Cinema</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" asp-validation-summary="ModelOnly">
                    <div  class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="LogoPreview" style="max-width: 200px; max-height: 200px;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control mt-3" rows="4"></textarea>
                        <span  asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-outline-success mt-3" />
                        <a class="btn btn-outline-secondary mt-3" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
        
        $("#Logo").on("change", function() {
            var output = document.getElementById('LogoPreview');
            output.src = $(this).val();
        })
    </script>
}
